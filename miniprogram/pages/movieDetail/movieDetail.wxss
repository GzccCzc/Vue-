.score{
  
  /* margin-left: 100rpx; */
  margin-top: 80rpx;
  /* margin-right: 200rpx; */
  position: absolute;
  left: 100rpx;
}
.word{
  
  vertical-align: middle;
  
  top:500rpx;
}
.long-dec{
  width: 95%;
  margin-left: 5rpx;
  display: -webkit-box;/*关键属性*/
  border-style: dashed 2px;
  word-break: break-all;
  -webkit-box-orient: vertical;/* 关键属性 */
  -webkit-line-clamp:4;/* 关键属性 */
  overflow: hidden;/* 关键属性 */
  text-overflow:ellipsis;/* 超出内容显示省略号*/
}
.hide{
 display: -webkit-box;
}
.show{
 display: block;
}
.arrow{
 position: absolute;
 width: 40rpx;
 height: 43rpx;
 left: 50%;
 transform: translate(-50%);
}
.day{
  margin-top: 40rpx;
}
.select_box{
  background: #fff;
  width: 30%;
  height: 90%;
  /* margin: 30rpx auto; */
  margin-left: 470rpx;
  position: relative;
  margin-top: 10rpx;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  background-color:#efefef;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
.good{
  border-bottom:2px solid #ccc;
  width:40rpx;
  height: 40rpx;
}
.goodnum{
  margin-left: 5rpx;
  
}
.detailphoto{
  margin-top: 10rpx;
}


.image-group {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  width: 100%;
  
}
