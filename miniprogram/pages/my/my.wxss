.my{
  background: #008000;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.my-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.my-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}

.my-text{
  font-size: 60rpx;
  color: grey;
  font-family: '楷书';

}
